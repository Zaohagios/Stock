<% if @user.errors.any? %>
<h2>Following Errors:</h2>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
<p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
</p>
<p>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
</p>
<p>
    <%= f.label 'Password' %><br />
    <%= f.password_field :password_digest %>
</p>
<p>
    <%= f.submit %>
</p>

<% end %>